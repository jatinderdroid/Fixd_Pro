<LinearLayout
    android:id="@+id/layout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout6"
    android:layout_marginTop="@dimen/serviceleftright"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtpart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:padding="@dimen/servicepadding"
        android:singleLine="true"
        android:text="@string/part"
        android:textColor="@color/lb_tv_white"
        android:textSize="@dimen/serviclarge_text" />

    <TextView
        android:id="@+id/txtpartNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/serviceleftright"
        android:layout_weight="0.7"
        android:background="@drawable/white_rectangle"
        android:padding="@dimen/servicepadding"
        android:text="15"
        android:gravity="center"
        android:textColor="@color/lb_tv_white"
        android:textSize="@dimen/servicesmall_text" />

    <TextView
        android:id="@+id/txtpartNumD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/serviceleftright"
        android:layout_weight="1.1"
        android:background="@drawable/white_rectangle"
        android:padding="@dimen/servicepadding"

        android:textColor="@color/lb_tv_white"
        android:textSize="@dimen/servicesmall_text" />

    <TextView
        android:id="@+id/txtpartNumDSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/serviceleftright"
        android:layout_weight="1.5"
        android:background="@drawable/white_rectangle"
        android:padding="@dimen/servicepadding"
        android:textColor="@color/lb_tv_white"
        android:textSize="@dimen/servicesmall_text" />
</LinearLayout>