<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <fixtpro.com.fixtpro.views.RatingBarView
            android:id="@+id/custom_ratingbar"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            app:starCount="5"
            app:starEmpty="@drawable/blank_star"
            app:starFill="@drawable/fill_star"
            app:starImageSize="@dimen/ratinglistitemstarsize" />

        <TextView
            android:id="@+id/txtRateingInterval"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:gravity="right|center"
            android:singleLine="true"
            android:text="1 w"
            android:textColor="@color/lb_tv_white"
            android:textSize="@dimen/ratingtxtmedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="3dp"
            android:singleLine="true"
            android:text="George Son"
            android:textColor="@color/lb_tv_white"
            android:textSize="@dimen/ratingtxtlarge" />

        <TextView
            android:id="@+id/txtComments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="3dp"
            android:text="Testing Testing Testing Testing Testing Testing TestingTestingTesting Testing Testing Testing"
            android:textColor="@color/lb_tv_white"
            android:textSize="@dimen/ratingtxtsmall" />


    </LinearLayout>


</LinearLayout>