<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_grey_blur"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Search EditView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"
                android:hint="Search"
                android:drawableLeft="@drawable/search_grey"
                android:background="@drawable/search_box"/>
        </LinearLayout>
        <!--JobName-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtJobName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/commonmediumtxt"
                android:gravity="center"
                android:padding="@dimen/commonpadding"
                android:text="Install Type"/>
        </LinearLayout>

        <!--set the Line-->
        <include layout="@layout/line_layout"></include>

        <!--ListView Motor..with Doller-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:id="@+id/listViewInstallType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/white"
                android:dividerHeight="1.5dp"></ListView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>