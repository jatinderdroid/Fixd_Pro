<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">

    <LinearLayout
        android:background="@drawable/orange_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/partleftrightmar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgWatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/choosetime"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/commonlargetxt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:padding="6dp"
                android:id="@+id/txtSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/selectdate"
                android:background="#d55705"
                android:layout_marginRight="1dp"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/commonmediumtxt" />

            <TextView
                android:padding="6dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/txtSelectTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:background="#d55705"
                android:text="@string/selecttime"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/commonmediumtxt" />

        </LinearLayout>
        <!--Date Time Picker-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                style="@style/DateTimePickerTheme"
                android:yearListSelectorColor="@android:color/white"
                ></DatePicker>

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:visibility="gone"
                style="@style/DateTimePickerTheme"

                ></TimePicker>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_Reschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/reschedule" />

    </LinearLayout>

</RelativeLayout>